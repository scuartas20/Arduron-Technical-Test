# =============================================================================
# ACCESS CONTROL MANAGER CONFIGURATION - EXAMPLE
# =============================================================================
# Copy this file to .env and update the values as needed

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True
RELOAD=True

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
WS_ENDPOINT=/ws
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=20

# API Configuration
API_PREFIX=/api
API_TITLE=Access Control Manager API
API_DESCRIPTION=A real-time access control system for smart doors
API_VERSION=1.0.0

# Security Configuration
ADMIN_USER_ID=admin
DEFAULT_USER_TIMEOUT=300

# Rate Limiting Configuration
# Max attempts per minute per user/device combination
RATE_LIMIT_MAX_ATTEMPTS_PER_MINUTE=10
# Max failed attempts before longer lockout
RATE_LIMIT_MAX_FAILED_ATTEMPTS=3
# Lockout duration in minutes after max failed attempts
RATE_LIMIT_LOCKOUT_DURATION_MINUTES=10
# How often to clean old records (in minutes)
RATE_LIMIT_CLEANUP_INTERVAL_MINUTES=60

# Device Configuration
DEFAULT_DEVICE_COUNT=2
DEVICE_STATE_BROADCAST=True

# Door Configuration
# Door 1 Settings
DOOR1_ID=DOOR-001
DOOR1_LOCATION=Main Entrance
DOOR1_TYPE=virtual  # "physical" for ESP32, "virtual" for simulation
DOOR1_INITIAL_PHYSICAL_STATUS=closed  # "open" or "closed"
DOOR1_INITIAL_LOCK_STATE=locked  # "locked" or "unlocked"

# Door 2 Settings
DOOR2_ID=DOOR-002
DOOR2_LOCATION=Conference Room A
DOOR2_TYPE=virtual  # "physical" for ESP32, "virtual" for simulation
DOOR2_INITIAL_PHYSICAL_STATUS=closed  # "open" or "closed"
DOOR2_INITIAL_LOCK_STATE=unlocked  # "locked" or "unlocked"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Environment
ENVIRONMENT=development