# =============================================================================
# ACCESS CONTROL MANAGER CONFIGURATION - EXAMPLE
# =============================================================================
# Copy this file to .env and update the values as needed

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True
RELOAD=True

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
WS_ENDPOINT=/ws
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=20

# API Configuration
API_PREFIX=/api
API_TITLE=Access Control Manager API
API_DESCRIPTION=A real-time access control system for smart doors
API_VERSION=1.0.0

# Security Configuration
ADMIN_USER_ID=admin
DEFAULT_USER_TIMEOUT=300

# Device Configuration
DEFAULT_DEVICE_COUNT=2
DEVICE_STATE_BROADCAST=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Environment
ENVIRONMENT=development